<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    xmlns:pages="clr-namespace:MauiApp1.Pages"
    FlyoutBackgroundImageAspect="AspectFill"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <FlyoutItem Route="root" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Route="welcome"
                      Title="Welcome"
                      ContentTemplate="{DataTemplate pages:WelcomePage}" />
        <ShellContent Route="bot"
                      Title="Bot"
                      ContentTemplate="{DataTemplate pages:BotPage}" />
        <ShellContent Route="categories"
                      Title="Categories"
                      ContentTemplate="{DataTemplate pages:CategoriesPage}" />
    </FlyoutItem>
</Shell>
